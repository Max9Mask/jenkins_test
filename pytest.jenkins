pipeline {
   agent any

   stages {
	stage('install packages') {
		steps {
	  		sh 'python3 -m venv env'
			sh '. env/bin/activate'
			sh 'pip install pytest'
			sh 'pip install pymssql'
			sh 'pip install allure-pytest'
		}
	}
    stage('run tests') {
        steps{      
            sh 'pytest --alluredir=allure-report pytest_cases.py'
	    sh 'allure serve allure-report'
        }
        }

  }
}
