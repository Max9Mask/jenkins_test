pipeline {
   agent any

   stages {
	stage('install packages') {
		steps {
	  		sh '''
			python3 -m venv env
			. env/bin/activate
			python3 -m pip install -r requirements.txt
			'''
		}
	}
    stage('run tests') {
        steps{      
            sh '''
	    pytest --alluredir=allure-results pytest_cases.py
	    allure serve allure-report
		'''
        }
        }

  }
}
